# Application Configuration
NODE_ENV=development
API_KEY=YOUR_API_KEY_HERE
HOST_PORT=3030
ENABLE_LOGGER=true
APP_TIMEZONE=Asia/Jakarta

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3030

# Webhook Configuration
WEBHOOK_URL=https://example.com/webhook
WEBHOOK_EXCLUDE_ME=false
WEBHOOK_EXCLUDE_GROUP=false
WEBHOOK_EXCLUDE_CHANNEL=false

# Rate Limiting
RATE_LIMIT=100
RATE_LIMIT_EXPIRE=60

# Message Configuration
MESSAGE_DELAY_TYPE=fixed
MESSAGE_DELAY=1

# Queue Configuration
QUEUE_CONNECTION=cron

# Redis Configuration (if using Redis queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USER=
REDIS_PASSWORD=

# SQLite Configuration
SQLITE_PATH=./data/whatsapp_api.db
SQLITE_VERBOSE=false

# LLM Auto-Response Configuration
LLM_ENABLED=false
LLM_PROVIDER=openai                    # openai, claude, gemini
LLM_API_KEY=sk-your-api-key
LLM_MODEL=gpt-4o-mini                  # or claude-sonnet-4-5, gemini-2.0-flash
LLM_SYSTEM_PROMPT=You are a helpful WhatsApp assistant. Be concise and friendly.
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.7

# Auto-Response Trigger Settings
LLM_TRIGGER_MODE=all                   # all, keyword, prefix
LLM_TRIGGER_KEYWORDS=help,info,support # comma-separated (for keyword mode)
LLM_TRIGGER_PREFIX=!ai                 # prefix to trigger (for prefix mode)
LLM_EXCLUDE_GROUPS=true
LLM_EXCLUDE_CHANNELS=true
LLM_RATE_LIMIT=10                      # max responses per minute per contact
LLM_HISTORY_LIMIT=10                   # conversation history messages to include
